<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/fragment_vertical_padding"
    android:paddingEnd="@dimen/fragment_horizontal_padding"
    android:paddingStart="@dimen/fragment_horizontal_padding"
    android:paddingTop="@dimen/fragment_vertical_padding">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ru.trubin23.tasksforschool.colorpicker.SwatchView
            android:id="@+id/swatchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ru.trubin23.tasksforschool.colorpicker.HueSatView
            android:id="@+id/hueSatView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin"
        android:orientation="vertical">

        <ru.trubin23.tasksforschool.colorpicker.SliderView
            android:id="@+id/sliderView"
            android:layout_width="@dimen/sliderHeight"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/hexEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_vertical_padding"
            android:layout_marginTop="@dimen/margin"
            android:text="@string/default_color" />

    </LinearLayout>

</LinearLayout>